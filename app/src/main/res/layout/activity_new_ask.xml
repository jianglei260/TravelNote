<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="askViewModel"
            type="cn.edu.cuit.wsy.travelnote.ask.NewAskViewModel" />

        <import type="me.tatarka.bindingcollectionadapter.LayoutManagers" />

        <import type="android.view.View" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/deep_white_smoke">

        <RelativeLayout
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@color/white"
            android:elevation="1dp">

            <ImageView
                android:id="@+id/left_image"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:paddingRight="15dp"
                android:src="@drawable/ic_back"
                app:clickCommand="@{askViewModel.onBackClick}" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@{askViewModel.title}"
                android:textColor="#ff232326"
                android:textSize="17sp" />
            <!--<ImageView-->
            <!--android:id="@+id/right_image"-->
            <!--android:layout_width="49dp"-->
            <!--android:layout_height="49dp"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:src="@drawable/ic_add"-->
            <!--android:paddingLeft="10dp"-->
            <!--android:paddingRight="15dp"-->
            <!--app:clickCommand="@{eventViewModel.addClick}"-->
            <!--android:tint="@color/colorPrimary"/>-->
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/title_bar">

            <EditText
                android:id="@+id/ask_title"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:background="@drawable/selector_edittext"
                android:hint="请输入标题"
                android:padding="4dp"
                android:text="@={askViewModel.askTitle}" />

            <EditText
                android:id="@+id/ask_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/send_button"
                android:layout_below="@id/ask_title"
                android:layout_margin="8dp"
                android:background="@drawable/selector_edittext"
                android:gravity="start"
                android:hint="请输入内容"
                android:padding="4dp"
                android:text="@={askViewModel.content}" />

            <Button
                android:id="@+id/send_button"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:background="@drawable/selector_button"
                android:text="发布"
                android:textColor="@color/white"
                app:clickCommand="@{askViewModel.sendClick}" />
        </RelativeLayout>

    </RelativeLayout>
</layout>